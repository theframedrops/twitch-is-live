{
	"compilerOptions": {
		"rootDir": "./src/",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"esModuleInterop": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		]
	}
}
